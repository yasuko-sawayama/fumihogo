- set_meta_tags title: yield(:title)
- content_for :stylesheet do
  = stylesheet_link_tag "//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css"
  = stylesheet_pack_tag('vendor-bundle')
  -# stylesheet_pack_tag('app-bundle')

- content_for :javascript do
  = javascript_include_tag "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
  = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"
  = javascript_include_tag "https://unpkg.com/react@16/umd/react.production.min.js", crossorigin: 'anonymous'
  = javascript_include_tag 'https://unpkg.com/react-dom@16/umd/react-dom.production.min.js', crossorigin: 'anonymous'
  = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/redux/4.0.1/redux.js', crossorigin: 'anonymous'

  = javascript_pack_tag('vendor-bundle', 'data-turbolinks-track': true, defer: true)
  = javascript_pack_tag('app-bundle', 'data-turbolinks-track': true, defer: true)

- content_for :react_on_rails do
  = redux_store_hydration_data

= render '/layouts/shared/page_title'
= render template: "/layouts/application"
