.product-item.with-icon.media
  .media-left
    = link_to product do
      %i.fa.fa-book
  .media-body
    .media-heading
      %h3.title= link_to product.title, product
      
      %h4.sub-title= product.description&.truncate(100)
    .description
      - if policy(product).destroy?
        .pull-right
          = link_to product, method: :delete, class: 'btn btn-default', data: { confirm: "本当に削除しますか？\n一度削除すると元に戻すことはできません。" } do
            %i.fa.fa-trash
            削除
      .post-meta
        %p
          #{product.privacy_level}
          |
          文字数：#{product.character_count}
          |
          ページ数：#{product.pages.count}
        %p
          #{l product.created_at}
      - if product.user.twitter?
        = link_to product.user.sns_url, class: 'link-with-icon' do
          %i.fa.fa-external-link
          = product.user.nickname
      - else
        = product.user.nickname
    

